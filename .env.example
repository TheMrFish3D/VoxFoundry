# Environment variables for development
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgres://voxfoundry:development_password@localhost:5432/voxfoundry
REDIS_URL=redis://localhost:6379

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=voxfoundry
MINIO_SECRET_KEY=development_password
MINIO_USE_SSL=false

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-here-at-least-32-characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-here

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Voice Synthesis API Keys
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=your-azure-region-here
GOOGLE_TTS_KEY=your-google-tts-key-here

# Application Configuration
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=epub,pdf,txt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password